<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>DMEZ | Track</title>
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/css/font-awesome.min.css" rel="stylesheet">
    <link href="/public/css/prettyPhoto.css" rel="stylesheet">
    <link href="/public/css/price-range.css" rel="stylesheet">
    <link href="/public/css/animate.css" rel="stylesheet">
    <link href="/public/css/main.css" rel="stylesheet">
    <link href="/public/css/responsive.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/footer1.css">
    <link rel="stylesheet" href="/public/css/header.css">
    <link rel="stylesheet" href="/public/css/product.css">
    <link rel="stylesheet" href="/public/css/track.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
        integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w=="
        crossorigin="anonymous" />
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

</head>


<body>
    <header>
        <nav>
            <div id="navbar">
                <div id="logo" class="reverse">
                    <div class="mobile-btn" style="font-size:30px;cursor:pointer; font-weight:bold;margin-top: 10px;"
                        onclick="openNav()">&#9776;</div>

                    <div class="logo" style="margin-left: 15px;"><a href="/"><img src="/public/images/dmez.png"
                                width="45" height="64"></img>
                        </a></div>


                </div>


                <sub-header id="links">
                    <br>
                    <div class="search-bar">

                        <div class="search">
                            <form class="search-container">
                                <input type="text" id="search-bar" placeholder="Search for medicines">
                                <a href="#"><i id="icon" class="fas fa-search"></i></a>
                            </form>

                        </div>


                    </div>
                </sub-header>






                <div id="links">

                    <a href="/products">Shop</a>

                    <a href="/account"><i class="fas fa-user-circle"></i> Account</a>
                    <a href="/cart"> <i class="fas fa-shopping-cart"></i> Cart</a>

                </div>
            </div>

        </nav>
        <!-- Mobile Menu -->
        <div id="mySidenav" class="sidenav">
            <a style="cursor:pointer;" class="closebtn" onclick="closeNav()">&times;</a>
            <a style="color: #A1B985;">Howdy!</a>
            <a href="/">Home</a>
            <a href="/products">Shop</a>
            <a href="/cart"> Cart</a>
            <a href="/account"> Account</a>

            <a href="/products">Contact</a>
            <div class="search">
                <form class="search-container">
                    <input type="text" id="search-bar" placeholder="Search for medicines"
                        style="border: 1px solid #A1B985">
                    <a href="#"><i id="icon" class="fas fa-search"></i></a>
                </form>

            </div>
        </div>
    </header>



    <div class="track-header">

        <div class="order-details">
            <span>
                <h4>Order ID</h4><b><%=data._id%></b>
            </span>
            <span>
                <h4>Payment ID</h4><b><%=data.paymentId%></b>
            </span>
            <span>
                <h4>Date</h4><b><%=new Date(data.createdAt).toDateString()%></b>
            </span>
        </div>

        <div class="delivery">

            <h4><b>Delivery Address</b></h4>
            <div class="address">
                <h4><%=data.address.name%></h4>
                <h5>
                    <%=data.address.flatnumber%>,
                    <%=data.address.area%>,
                    <%=data.address.city%>,
                    <%=data.address.state%>,
                    <%=data.address.landmark%>,
                    <%=data.address.zipcode%>
                </h5>
                <h5><%=data.address.contact%></h5>
            </div>
        </div>


    </div>



    <style>
        .track {
            width: 95%;
            padding: 2.5%;
            box-shadow: none;
            display: flex;
        }

        .products {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .products>.product-detail {
            width: 50%;
        }

        .products>.product-detail>.details>p:nth-child(1) {
            white-space: pre-wrap
        }
    </style>

    <div class="track">
        <!--products-->
        <div class="products">
            <%for(let i = 0; i < data.products.length; i++){%>
            <%let product = data.products[i]%>
            <div class="product-detail">
                <%const imgUrl = product.coverImage || "/public/images/default.png"%>
                <img src="<%=imgUrl%>">
                <div class="details">
                    <p><%=product.title%></p>
                    <p>
                        <span>Price:</span><span>â‚¹<%=product.price - product.discount%></span>
                    </p>
                    <p>
                        <span>Quantity:</span><span><%=product.quantity%></span>
                    </p>
                </div>
            </div>
            <%}%>
      </div>
      <!--products-->
<!--status-->
        <div class="status">
            <style>
             .status > p {
             display: flex;
             }
             .status > p > span {
              color:grey;
             }
            </style>
         <h2>Order Status</h2>
         <%for(let i = 0; i < data.status.length; i++ ){%>
            <p>
                <span><%=data.status[i].state%></span>
                <h4><%=new Date(data.status[i].date).toDateString()%></h4>
            </p>
            <hr>
            <%}%>
    </div>
<!--status-->
    </div>

    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }

    </script>

    <script src="/public/js/jquery.js"></script>
    <script src="/public/js/bootstrap.min.js"></script>
    <script src="/public/js/jquery.scrollUp.min.js"></script>
    <script src="/public/js/price-range.js"></script>
    <script src="/public/js/jquery.prettyPhoto.js"></script>
    <script src="/public/js/main.js"></script>


</body>

<script src="/public/main_js/search.js"></script>

</html>