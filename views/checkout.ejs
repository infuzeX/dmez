    <div class="page-wrapper">


        <main class="main">
            <div class="page-header text-center" id="bg1">
                <div class="container">
                    <h1 class="page-title">Checkout<span>Shop</span></h1>
                </div><!-- End .container -->
            </div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <!-- <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Shop</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Checkout</li> -->
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
                <div class="checkout">
                    <div class="container">

                        <form action="#">
                            <div class="row">
                                <div class="col-lg-9">
                                    <h2 class="checkout-title">Billing Details & Shipping Address</h2>
                                    <!-- End .checkout-title -->
                                    <h6> <a href="/account/address/edit" style="color: #A1B985;">Change Billing
                                            Address</a></h6>
                                    <div class="row">
                                        <div class="col-sm-6 col-ms-6">
                                            <label id="fname">Name: </label>
                                            <span><%= data.address.name || ''%></span>
                                        </div><!-- End .col-sm-6 -->
                                    </div><!-- End .row -->

                                    <label id="street">House/Flat Number:
                                        <span><%= data.address.flatnumber || ''%></span>
                                    </label>


                                    <div class="row">
                                        <div class="col-sm-6">
                                            <label id="city">Town / City: </label>
                                            <span><%= data.address.city || ''%></span>
                                        </div><!-- End .col-sm-6 -->

                                        <div class="col-sm-6">
                                            <label id="state">State:</label>
                                            <span><%= data.address.state || ''%></span>
                                        </div><!-- End .col-sm-6 -->
                                    </div><!-- End .row -->

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <label id="zip">Postcode / ZIP:</label>
                                            <span><%= data.address.zipcode || ''%></span>
                                        </div><!-- End .col-sm-6 -->

                                        <div class="col-sm-6">
                                            <label id="phone">Phone:</label>
                                            <span><%= data.address.contact || ''%></span>
                                        </div><!-- End .col-sm-6 -->
                                    </div><!-- End .row -->

                                    <label id="emailadd">Email address: <span><%=data.user.email || ''%></span> </label>




                                </div><!-- End .col-lg-9 -->
