                                    <div class="summary">
                                        <h3 class="summary-title">Your Order</h3><!-- End .summary-title -->

                                        <table class="table table-summary">
                                            <thead>
                                                <tr>
                                                    <th>Product</th>
                                                    <th>Total</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <% data.products.forEach(product => {  %>
                                                <tr>
                                                    <td><a
                                                            href="/products/<%=product.productId%>"><%=product.title%></a>
                                                    </td>
                                                    <td>₹<%= (product.price - product.discount) * product.quantity %>
                                                    </td>
                                                </tr>
                                                <% }) %>

                                                <tr class="summary-coupon">
                                                    <td>Coupon Savings:</td>
                                                    <td>₹<%=data.couponDiscount%></td>
                                                </tr><!-- End .summary-subtotal -->
                                                <tr class="summary-subtotal">
                                                    <td style="color:#A1B985 ;">Subtotal:</td>
                                                    <td style="color:#A1B985 ;">
                                                        ₹<%=data.subTotal - data.couponDiscount%></td>
                                                </tr><!-- End .summary-subtotal -->
                                                <tr>
                                                    <td>Shipping:</td>
                                                    <% if(!data.charge) {%>
                                                    <td>Free shipping</td>
                                                    <%} else {%>
                                                    <td>₹<%=data.charge%></td>
                                                    <%}%>
												</tr>
                                                <tr class="summary-total">
                                                    <td style="font-weight: 700;">Total:</td>
                                                    <td style="font-weight: 700;">₹<%= data.total %></td>
                                                </tr><!-- End .summary-total -->
                                            </tbody>
                                        </table><!-- End .table table-summary -->



                                        <%if(data.isAddress) {%>
                                        <div onclick="initPayment()" class="btor">
                                            <center><span>Place Order</span></center>
                                        </div>
                                        <%}else{%>
